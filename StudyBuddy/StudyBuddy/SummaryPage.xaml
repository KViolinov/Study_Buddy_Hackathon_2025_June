<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudyBuddy.SummaryPage"
             BackgroundColor="White"
             Title="SummaryPage">
    <Grid RowDefinitions="Auto,*,Auto" Padding="20">

        <!-- Title Label -->
        <Label
            Text="Summary"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="35"
            TextColor="Black"
            FontAttributes="Bold"
            Margin="0,0,0,20"
            Grid.Row="0"/>

        <!-- Main content (expands to take space) -->
        <ScrollView Grid.Row="1">
            <Label 
                Text="Placeholder text gfsdg dfmg kdfkg dfk gkdfk gkdfk gkdfk gkdfk gkdfk gdfkg kdfkgkdfghkdfjhd fjhdfjh"
                VerticalOptions="Start" 
                    TextColor="Black"
                HorizontalOptions="Center"
                Padding="20,0,20,0"/>
        </ScrollView>

        <!-- Button anchored to bottom -->
        <Button 
            Text="Go Back"
            Grid.Row="2"
            HorizontalOptions="Fill"
            VerticalOptions="End"
            Margin="0,20,0,0"
            BackgroundColor="#0769C3"
                TextColor="White"
            FontAttributes="Bold"
            
            Clicked="Button_Clicked"/>
    </Grid>
</ContentPage>