<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="White"
             x:Class="StudyBuddy.MainPage">

 
    <ScrollView>
        <VerticalStackLayout
            Padding="0,50,0,0"
            Spacing="0">


            <Label
                Text="Welcome"
                TextColor="Black"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                FontSize="55"
             
                   FontFamily="Poppins"
                FontAttributes="Bold"
                />
            <Label
                Text="To"
                VerticalOptions="Center" 
                TextColor="Black"
                HorizontalOptions="Center"
                   FontFamily="Poppins"
                FontSize="35"
                 FontAttributes="Bold"/>


            <Label
                Text="Study Buddy"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                  FontFamily="Poppins"
                FontSize="55"
                Margin="0,0,0,30"
                 FontAttributes="Bold"
            TextColor="#0769C3"/>
            <Label
    Text="Study Buddy helps you master any subject by creating quizzes, summaries, and flashcards tailored just for you. It also helps you review and reinforce what you’ve learned, making study sessions faster and more effective. With Study Buddy, learning becomes easy, fun, and personalized!" 
    FontSize="20"
       FontFamily="Poppins"
    Padding="20,0,20,0"
    TextColor="Black"
    HorizontalTextAlignment="Center"
                HorizontalOptions="Center"
                Margin="0,0,0,30"/>

            <Button 
                 Text="Visit our souce code"
                 Grid.Row="2"
                 HorizontalOptions="Fill"
                 VerticalOptions="End"
                 Margin="0,50,0,0"
                 BackgroundColor="#0769C3"
                 TextColor="White"
                 FontAttributes="Bold"
                 WidthRequest="300"
                CornerRadius="20"
                 Padding="20,20,20,20"
                Clicked="OnCounterClicked"/>    




        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
