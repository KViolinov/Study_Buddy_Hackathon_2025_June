<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StuddyBuddy.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StuddyBuddy"
    Shell.NavBarIsVisible="False"
    xmlns:pages="clr-namespace:StuddyBuddy.Pages"
    Title="StuddyBuddy"

    Shell.TabBarBackgroundColor="#0769C3"
    Shell.TabBarForegroundColor="White"
    Shell.TabBarTitleColor="LightGray"
    Shell.TabBarUnselectedColor="LightBlue"
>

    <TabBar>
        <ShellContent 
           Title="Settings"
            
           ContentTemplate="{DataTemplate pages:SettingsPage}" />  

        <ShellContent 
            Title="Home"
           
            ContentTemplate="{DataTemplate local:MainPage}" />

        <ShellContent 
          Title="Input"
      
          ContentTemplate="{DataTemplate pages:InputPage}" />

        <ShellContent 
   Title="Input"
      
   ContentTemplate="{DataTemplate pages:SummaryPage}" />
        <!-- Add more tabs here -->
    </TabBar>

</Shell>

