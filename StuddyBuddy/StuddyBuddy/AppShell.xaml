<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StuddyBuddy.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StuddyBuddy"
    xmlns:pages="clr-namespace:StuddyBuddy.Pages"
    Title="StuddyBuddy">

    <TabBar>
        <ShellContent 
           Title="Settings"
            
           ContentTemplate="{DataTemplate pages:SettingsPage}" />  

        <ShellContent 
            Title="Home"
           
            ContentTemplate="{DataTemplate local:MainPage}" />

        <ShellContent 
          Title="Input"
      
          ContentTemplate="{DataTemplate pages:InputPage}" />
        <!-- Add more tabs here -->
    </TabBar>

</Shell>

