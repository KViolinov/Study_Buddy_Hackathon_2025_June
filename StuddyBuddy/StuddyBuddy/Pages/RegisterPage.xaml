<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StuddyBuddy.Pages.RegisterPage"
             Title="RegisterPage">
    <VerticalStackLayout>
        <Label 
    Text="REGISTER"
    VerticalOptions="Center" 
    HorizontalOptions="Center" />



        <Label 
    Text="Username:"
    VerticalOptions="Center" 
    HorizontalOptions="Center" />

        <Entry Placeholder="Enter something..." 
Grid.Column="1" 
FontFamily="TimesNewRoman"
TextColor="Black"
FontAttributes="Bold"/>

        <Label 
            Text="Email:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry Placeholder="Enter something..." 
        Grid.Column="1" 
        FontFamily="TimesNewRoman"
        TextColor="Black"
        FontAttributes="Bold"/>
        <Label 
    Text="Password:"
    VerticalOptions="Center" 
    HorizontalOptions="Center" />

        <Entry Placeholder="Enter something..." 
Grid.Column="1" 
FontFamily="TimesNewRoman"
TextColor="Black"
FontAttributes="Bold"/>
        <Button Text="Submit"
        Grid.Row="0"
        Grid.Column="1"
        BackgroundColor="#0769C3"
        TextColor="White"
        FontFamily="TimesNewRoman"
                Clicked="RegisterSubmit"/>
        
    </VerticalStackLayout>
</ContentPage>