<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StuddyBuddy.Pages.InputPage"
             BackgroundColor="#f9f9f9"
             Title="InputPage">

    <ScrollView>
        <VerticalStackLayout>

                <Image Source="study_buddy_logo.png"
       WidthRequest="280"
       HeightRequest="280"
       Grid.Column="1"
       Aspect="AspectFit" />

            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="2">
                <!-- Left "+" Button -->
                <Button Text="+" 
            WidthRequest="30"
            HeightRequest="30"
            CornerRadius="30"
            BackgroundColor="#9d6ce6"
            TextColor="White"
            FontSize="24"
            Grid.Column="0" 
            Padding="0"/>

                <!-- Frame with Entry and Right Button Inside -->
                <Frame Grid.Column="1"
           CornerRadius="8"
           HasShadow="False"
           BackgroundColor="White"
           Padding="10,5"
           VerticalOptions="Center">
                    <Grid ColumnDefinitions="*,Auto">
                        <Entry Placeholder="Enter something..."
                   FontFamily="TimesNewRoman"
                   TextColor="Black"
                   FontAttributes="Bold"
                   BackgroundColor="Transparent"
                   Grid.Column="0" />

                        <Button 
                Text="â†‘"
                FontSize="20"
                Grid.Column="1"
                BackgroundColor="#9d6ce6"
                TextColor="White"
                CornerRadius="6"
                Padding="10,0"
                HeightRequest="30"
                WidthRequest="40"
                VerticalOptions="Center"
                HorizontalOptions="End"/>
                    </Grid>
                </Frame>
            </Grid>

            <Grid RowDefinitions="*,*"
                  ColumnDefinitions="*,*"
                  RowSpacing="10" 
                  ColumnSpacing="10"
                  Padding="10">

                <Button Text="Summary"
                        Grid.Row="0"
                        Grid.Column="0"
                        BackgroundColor="#0769C3"
                        TextColor="White"
                        FontFamily="TimesNewRoman"
                        Clicked="ClickedSummaryButton"/>

                <Button Text="Quiz"
                        Grid.Row="0"
                        Grid.Column="1"
                        BackgroundColor="#0769C3"
                        TextColor="White"
                        FontFamily="TimesNewRoman"
                        Clicked="ClickedQuizButton"/>
                        
                <Button Text="Flash Cards"
                        Grid.Row="1"
                        Grid.Column="0" 
                        BackgroundColor="#0769C3"
                        TextColor="White"
                        FontFamily="TimesNewRoman"
                        Clicked="ClickedFlashCardButton"/>
                
                <Button Text="Resight"
                        Grid.Row="1"
                        Grid.Column="1"
                        BackgroundColor="#808080"
                        TextColor="White"
                        FontFamily="TimesNewRoman"
                        Clicked="ClickedResightButton"/>

                
            </Grid>
       
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>