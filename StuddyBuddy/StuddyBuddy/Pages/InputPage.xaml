<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StuddyBuddy.Pages.InputPage"
             BackgroundColor="#f9f9f9"
             Title="InputPage">

    <ScrollView>
        <VerticalStackLayout>

                <Image Source="study_buddy_logo.png"
       WidthRequest="280"
       HeightRequest="280"
       Grid.Column="1"
       Aspect="AspectFit" />

            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="10">
                <Button Text="+" 
                    WidthRequest="30"
                    HeightRequest="30"
                    CornerRadius="30"
                    BackgroundColor="#9d6ce6"
                    TextColor="White"
                    FontSize="24" />
                <Entry Placeholder="Enter something..." 
                       Grid.Column="1" 
                       FontFamily="TimesNewRoman"
                       TextColor="Black"
                       FontAttributes="Bold"/>
            </Grid>

            <Grid RowDefinitions="*,*"
                  ColumnDefinitions="*,*"
                  RowSpacing="10" 
                  ColumnSpacing="10"
                  Padding="10">

                <Button Text="Summary"
                        Grid.Row="0"
                        Grid.Column="0"
                        BackgroundColor="#0769C3"
                        TextColor="White"
                        FontFamily="TimesNewRoman"
                        Clicked="ClickedSummaryButton"/>

                <Button Text="Quiz"
                        Grid.Row="0"
                        Grid.Column="1"
                        BackgroundColor="#0769C3"
                        TextColor="White"
                        FontFamily="TimesNewRoman"
                        Clicked="ClickedQuizButton"/>
                        
                <Button Text="Flash Cards"
                        Grid.Row="1"
                        Grid.Column="0" 
                        BackgroundColor="#0769C3"
                        TextColor="White"
                        FontFamily="TimesNewRoman"
                        Clicked="ClickedFlashCardButton"/>
                
                <Button Text="Resight"
                        Grid.Row="1"
                        Grid.Column="1"
                        BackgroundColor="#0769C3"
                        TextColor="White"
                        FontFamily="TimesNewRoman"
                         Clicked="ClickedResightButton"/>

                
            </Grid>
       
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>